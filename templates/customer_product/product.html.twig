{% extends 'base.html.twig' %}

{% block title %}Product!{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-6 mt-2 d-flex justify-center">
            <div class="card">
                <div class="card-header">
                    <h5>{{ product.name | upper }}</h5> 
                </div>
                <div class="card-body">
                    <img src="{{ product.image }}" alt="" class="w-100 imageProductDetail">
                </div>
                 <div class="card-footer ml-5">
                    <p>Prix : {{ product.price | priceFormatEuro }}</p>
                    <p>Cat√©gorie : {{ product.category.name }}</p>
                    <a href="#" class="btn btn-primary w-100">Ajouter au Panier</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}